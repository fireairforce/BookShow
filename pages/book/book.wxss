.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 50px;
    background-color: #f5f5f5;

}

.box image {
    margin-left: 10px;
    width: 14px;
    height: 14px;
    margin-bottom: -2px;
}

.books-container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
}
